<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SuiteTestBreyers" parallel="tests" thread-count="5" preserve-order="true">
  <parameter name="appURL" value="https://secure.breyers.com/contactus" />  
  <!-- Test For English On Desktop IE -->
  <test name="TestBreyers_en_ie" preserve-order="true">
  <parameter name="automationKit" value="selenium" />
  <parameter name="localeLanguage" value="en" />
  <parameter name="browserName" value="ie" />
     <classes>     
      <class name="dweb.test.i18n.breyers.functionaltests.TestBreyers"/>
    </classes>
  </test>
  
  <!--  Test For Spanish On Desktop Firefox -->
  <test name="TestBreyers_es_ff" preserve-order="true">
    <parameter name="automationKit" value="selenium" />
  	<parameter name="localeLanguage" value="es" />
  	<parameter name="browserName" value="ff" />
    <classes>
      <class name="dweb.test.i18n.breyers.functionaltests.TestBreyers"/>
    </classes>
  </test> 
 
</suite>